<dl class="dl-horizontal">
    <dt>{{'tournament.mode.label'|trans}}</dt>
    <dd>{{('tournament.mode.'~tournament.tournamentMode~'.description')|trans({'%count%':tournament.tournamentCount})}}</dd>

    <dt>{{'tournament.game_mode.label'|trans}}</dt>
    <dd>{{('tournament.game_mode.'~tournament.gameMode~'.description')|trans({'%count%':tournament.gameCount})}}</dd>

    <dt>{{'tournament.leg_mode.label'|trans}}</dt>
    <dd>{{('tournament.leg_mode.'~tournament.legMode~'.label')|trans}}</dd>

    <dt>{{ 'board.plural'|trans }}</dt>
    <dd>{{ tournament.boards|length }}</dd>

    <dt>{{ 'player.plural'|trans }}</dt>
    <dd>{{ tournament.players|length }}</dd>

    <dt>{{ 'tournament.created'|trans }}</dt>
    <dd>{{ tournament.created|date }}</dd>
</dl>
