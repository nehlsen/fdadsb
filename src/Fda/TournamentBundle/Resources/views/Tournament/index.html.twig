{% extends 'FdaPlayerBundle::layout.html.twig' %}

{% block content -%}
    {% include 'FdaTournamentBundle:Tournament:_box.html.twig' %}

    <h1>Tournament list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>name</th>
                <th>Gamemode</th>
                <th>Gamecount</th>
                <th>Legmode</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tournament in tournaments %}
            <tr>
                <td><a href="{{ path('tournament_show', { 'id': tournament.id }) }}">{{ tournament.id }}</a></td>
                <td>{{ tournament.name }}</td>
                <td>{{ tournament.gameMode }}</td>
                <td>{{ tournament.gameCount }}</td>
                <td>{{ tournament.legMode }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tournament_show', { 'id': tournament.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tournament_edit', { 'id': tournament.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tournament_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
