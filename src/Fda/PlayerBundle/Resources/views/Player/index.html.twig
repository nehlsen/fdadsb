{% extends 'FdaPlayerBundle::layout.html.twig' %}

{% block content -%}
    <h1>Player list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td><a href="{{ path('player_show', { 'id': player.id }) }}">{{ player.id }}</a></td>
                <td>{{ player.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('player_show', { 'id': player.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('player_edit', { 'id': player.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('player_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
